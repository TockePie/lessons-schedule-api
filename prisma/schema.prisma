generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("DIRECT_URL")
}

model group {
  name       String     @unique
  photo      String     @default("https://cdn4.iconfinder.com/data/icons/zira/128/calendar-1024.png")
  created_at DateTime   @default(now())
  group_id   String     @id @default(uuid()) @map("group_id")
  updated_at DateTime   @updatedAt
  schedule   schedule[]
}

model schedule {
  title        String
  teacher      String
  url          String?
  type         lessonType
  day          Int
  row          Int
  created_at   DateTime   @default(now())
  group_id     String
  is_selective Boolean
  schedule_id  String     @id @default(uuid()) @db.Uuid
  updated_at   DateTime   @updatedAt
  week_parity  weekParity
  group        group      @relation(fields: [group_id], references: [group_id])
}

enum lessonType {
  LECTURE
  PRACTICE
  LAB
}

enum weekParity {
  EVEN
  ODD
  BOTH
}
